@model List<ClientModel>;
@{
    ViewData["Title"] = "Client Page";
}

<div class="text-center">
    <h1 class="display-4">Bem vindo!</h1>
    <a role="button" class="btn btn-primary" asp-controller="Client" asp-action="AddClient">Novo cliente</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Data de criação</th>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (ClientModel item in Model)
                {
                    if (item.Situation == true)
                    {
                        <tr>
                            <td>@item.CreateDate</td>
                            <td>@item.Name</td>
                            <td>@item.PhoneNumber</td>
                            <td>
                                <a role="button" class="btn btn-secondary"
                                   asp-controller="Client" asp-action="UpdateClient" asp-route-id="@item.Id">Editar</a>
                                <a role="button" class="btn btn-secondary"
                                   asp-controller="Client" asp-action="DisableConfirm" asp-route-id="@item.Id">Apagar</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
