@model ClientModel;
@{
    ViewData["Title"] = "AddClient Page";
}

<div class="text-center">

    <h1 class="display-4">Novo cliente</h1>
    <section>
        <form asp-controller="Client" asp-action="AddClient" method="post">
            <div class="form-group">
                <label for="Name">Nome</label>
                <input id="AddInput" asp-for="Name" type="text" class="form-control" placeholder="Digite o nome do cliente">
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="form-group">
                <label for="CPF">CPF</label>
                <input id="AddInput" asp-for="CPF" type="tel" min="11" maxlength="11" class="form-control" placeholder="Digite o nome do cliente" >
                @Html.ValidationMessageFor(x => x.CPF)
            </div>

            <div class="form-group">
                <label for="Name">Telefone</label>
                <input id="AddInput" asp-for="PhoneNumber" type="tel" onkeyup="formatarTelefone(this)" class="form-control" maxlength="11" placeholder="(xx) xxxxx-xxxx">
                @Html.ValidationMessageFor(x => x.PhoneNumber)
            </div>

            <button type="submit" class="btn btn-primary">Adicionar</button>
            <a role="button" class="btn btn-secondary" asp-controller="Client" asp-action="Index">Voltar</a>
        </form>
    </section>
</div>
