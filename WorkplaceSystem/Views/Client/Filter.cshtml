@model FilterModel;
@{
    ViewData["Title"] = "AddUse Page";
}

<div class="text-center">
    <h1 class="display-4">Escolha o período</h1>
    <section>
        <form asp-controller="Client" asp-action="ClientDetails">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="DateUse">Data inicial</label>
                <input id="AddInput" asp-for="StartDate" type="date" class="form-control">
            </div>

            <div class="form-group">
                <label for="StartUse">Data final</label>
                <input id="AddInput" asp-for="EndDate" type="date" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Filtrar</button>
            <a role="button" class="btn btn-secondary" asp-controller="Client" asp-action="Index">Voltar</a>
        </form>
    </section>
</div>
